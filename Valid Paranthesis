class Solution {
    public boolean isValid(String s) {

        Stack<Character> stack = new Stack<>();

        for(char c: s.toCharArray()){

            if(c == '{' || c == '(' || c == '['){
                stack.push(c);
            }
            else{

                if(stack.isEmpty()){
                    return false;
                }
                char b = stack.pop();

                if(b == '(' && c != ')'){
                    return false;
                }
                if(b == '{' && c != '}'){
                    return false;
                }
                if(b == '[' && c != ']'){
                    return false;
                }
            }
        }
        
        if(!stack.isEmpty()){
            return false;
        }
        return true;
    }
}
